#!/usr/bin/env bash
set -e

useage() {
  echo "Usage: benchmark [-n10] command..." >&2
}

benchmark() {
  if [[ -z "$1" || "$1" == "-h" ]]; then
    useage
    exit 1
  fi
  local n
  n=10
  while getopts n: OPT; do
    case "$OPT" in
    n) n="$OPTARG" ;;
    [?])
      useage
      exit 1
      ;;
    esac
  done
  [[ $OPTIND -gt 0 ]] && shift $(("$OPTIND" - 1))

  local statics=()
  for ((i = 0; i < "$n"; i++)); do
    spend_time=$(/usr/bin/time -p "$@" 2>&1 | grep real | awk '{print $2}')
    statics+=("$spend_time")
  done

  local total
  local mean
  local item
  total=${#statics[@]}
  for item in "${statics[@]}"; do
    mean=$(echo | awk "{printf(\"%0.9f\n\",$item/$total)}")
  done
  echo "$mean"
}

benchmark "$@"
