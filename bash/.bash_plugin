# bash completion
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion >> /dev/null
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion >> /dev/null
  elif [ -f /usr/local/etc/bash_completion ]; then
    . /usr/local/etc/bash_completion >> /dev/null
  fi
fi

if [ ! -e ~/.git_completion ]; then
  . ~/.git_completion
fi

get_git_completion() {
    curl -fsSLo ~/".git_completion" https://raw.githubusercontent.com/git/git/master/contrib/completion/git-completion.bash
}

[ -f ~/.fzf.bash ] && source ~/.fzf.bash

[ -f /usr/local/etc/profile.d/autojump.sh ] && . /usr/local/etc/profile.d/autojump.sh
